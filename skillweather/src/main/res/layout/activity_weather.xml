<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="2°"
            android:textColor="@color/weather_c1"
            android:textSize="86dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/weather_detail"
                android:textColor="@color/weather_c1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/air_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/weather_air_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="28dp"
                android:padding="2dp"
                android:text="优"
                android:textColor="@color/weather_c1"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="124dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:alpha="0.3"
        android:background="@android:color/white" />


    <LinearLayout
        android:id="@+id/forcast_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal">

    </LinearLayout>


    <ImageButton
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/home_btn" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/weizhi_icon"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="北京"
        android:textColor="@color/weather_c1"
        android:textSize="16dp" />

</FrameLayout>