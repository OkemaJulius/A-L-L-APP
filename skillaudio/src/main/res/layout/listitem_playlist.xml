<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/songinfo_item_playing"
            android:layout_width="35px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38px"
            android:background="@mipmap/playlist_bofangzhong_icon" />

        <TextView
            android:id="@+id/songinfo_item_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textSize="36px" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/songinfo_item_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:src="#FFFFFF" />

</RelativeLayout>
